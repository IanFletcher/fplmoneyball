<% provide(:title, 'BalanceSheet') %>
<div id = 'groundbackground'>
<div id="gameweeksgrid" class="container no-gutter">
	<div class="row">
		<div class= "col-md-2 col-sm-2"></div>
		<div class= "col-md-9 col-sm-9">
			<div class="arrowbox left btn"><</div>
			<div id="weekboxwindow">
				<div id= "weekboxes">
					<ul > 
					  <% @gameweeks.each do |gw| %>
					    <%= render 'gameweeks', gw:gw %>
					  <% end %>
					</ul>
				</div>
			</div>
			<div class="arrowbox right btn">></div>
			</br>
		</div>
	</div>
	<div class="row">
		<div class= "col-md-4 col-sm-4"></div>
		<div class= "col-md-3 col-sm-3">
			<button id="gwbutton" class="btn btn-primary"> Current Gameweek
			</button>
		</div>
	</div>
	<div id='gameweekstatement' >
		<%= render 'balancesheet', bs: @balancesheet %>
	</div>
</div>
</div>